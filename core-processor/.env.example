# Course Creator Environment Configuration
# Copy this file to .env and update values as needed

# Server Configuration
HOST=localhost
PORT=8080
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/course_creator.db
DB_MAX_CONNECTIONS=10
DB_CONN_MAX_LIFETIME=1h
DB_DEBUG=false

# Storage Configuration (Local - Default)
STORAGE_TYPE=local
STORAGE_BASE_PATH=./storage
STORAGE_PUBLIC_URL=http://localhost:8080/storage

# Storage Configuration (S3 - Alternative)
# Uncomment lines below to use S3 instead of local storage
# STORAGE_TYPE=s3
# STORAGE_BASE_PATH=
# STORAGE_PUBLIC_URL=https://your-bucket.s3.amazonaws.com
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# LLM Configuration
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com

# TTS Configuration
BARK_SERVER_URL=http://localhost:8765
TTS_MODEL=bark
TTS_VOICE=v2/en_speaker_6

# Security Configuration
JWT_SECRET=your-jwt-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development Settings
ENVIRONMENT=development
DEBUG=false