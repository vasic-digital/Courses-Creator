# Production Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=course_creator
DB_USER=course_creator
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_URL=postgres://course_creator:CHANGE_THIS_TO_SECURE_PASSWORD@postgres:5432/course_creator?sslmode=require

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration - Generate strong secrets for production!
JWT_SECRET=GENERATE_STRONG_256_BIT_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_STRONG_256_BIT_SECRET_HERE

# API Keys for External Services
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY

# TTS Configuration
TTS_PROVIDER=bark

# File Storage
STORAGE_TYPE=s3
STORAGE_BUCKET=course-creator-content
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1

# Server Configuration
API_PORT=8080
API_HOST=0.0.0.0
ENVIRONMENT=production

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# Monitoring
GRAFANA_PASSWORD=CHANGE_GRAFANA_ADMIN_PASSWORD

# SSL (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem